<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".5"
        tools:ignore="UselessLeaf">


        <ImageButton
            android:id="@+id/btnTeamA"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="0sp"
            app:srcCompat="@color/colorAccent"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/scoreTeamA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/zero"
            android:textColor="#FFF"
            android:textSize="100sp" />

        <Button
            android:id="@+id/minusTeamA"
            android:layout_width="50dp"
            android:layout_height="36dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/scoreTeamA"
            android:layout_toRightOf="@+id/scoreTeamA"
            android:background="@color/transparent"
            android:padding="0sp"
            android:text="-1"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/countDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:textColor="@color/colorWhite"
            android:textSize="30sp"
            tools:text="10:00" />


        <ImageButton
            android:id="@+id/btnImgStartPause"
            android:layout_width="36dp"
            android:layout_height="40dp"

            android:layout_alignBottom="@+id/countDown"
            android:layout_alignParentStart="true"
            android:layout_marginStart="63dp"
            android:background="@color/transparent"
            app:srcCompat="@drawable/play_white"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="63dp" />


        <ImageButton
            android:id="@+id/btnImgReset"
            android:layout_width="36dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/countDown"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:background="@color/transparent"
            app:srcCompat="@drawable/reset_white"
            tools:ignore="UnknownId"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/playerName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="58dp"
            android:layout_marginStart="27dp"
            android:text="Team A"
            android:textColor="@color/colorWhite"
            android:textSize="30sp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="27dp" />


    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".5"
        tools:ignore="UselessLeaf">

        <ImageButton
            android:id="@+id/btnTeamB"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0sp"
            app:srcCompat="@color/colorPrimary"
             />

        <TextView
            android:id="@+id/scoreTeamB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/zero"
            android:textColor="#FFF"
            android:textSize="100sp"
            />
        <Button
            android:id="@+id/minusTeamB"
            android:layout_width="50dp"
            android:layout_height="36dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/scoreTeamB"
            android:background="@color/transparent"
            android:padding="0sp"
            android:text="-1"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/scoreTeamB"
            android:textColor="@color/colorWhite"

            />

        <TextView
            android:id="@+id/playerName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="58dp"
            android:layout_marginStart="27dp"
            android:text="Team B"
            android:textColor="@color/colorWhite"
            android:textSize="30sp"
            android:layout_marginLeft="27dp"
            android:layout_alignParentLeft="true" />


    </RelativeLayout>

</LinearLayout>